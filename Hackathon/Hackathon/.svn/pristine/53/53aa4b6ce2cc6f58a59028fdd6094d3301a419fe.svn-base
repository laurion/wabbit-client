<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	    
	<LinearLayout
	    android:id="@+id/llGameScreen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/common_bg"
	    android:orientation="vertical">
	    
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1.0"
		    android:orientation="horizontal"
		    android:gravity="center_vertical">
		    <ImageButton
		        android:id="@+id/btnBack"
		        android:layout_width="0dp"
		        android:layout_height="@dimen/TopButtonHeight"
		        android:background="@drawable/back_btn"
		        android:layout_weight="1.0"/>
		    <TextView
		        android:id="@+id/tvMisses"
		        android:layout_width="0dp"
		        android:layout_height="@dimen/TopButtonHeight"
		        android:layout_marginLeft="@dimen/TopTitleMargin"
		        android:layout_marginRight="@dimen/TopTitleMargin"
		        android:background="@drawable/empty_label"
		        android:gravity="center"
		        android:textSize="20sp"
		        android:textColor="#FFFFFF"
		        android:layout_weight="2.0"/>
		    <TextView 
		        android:id="@+id/tvPecent"
		        android:layout_width="0dp"
		        android:layout_height="@dimen/TopButtonHeight"
		        android:background="@drawable/pecent_bg"
		        android:layout_weight="1.0"
		        android:gravity="center"
		        android:textSize="20sp"
		        android:textColor="#FFFFFF"/>
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="4.3"
		    android:orientation="vertical">
			<LinearLayout
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:background="#FFFFFF"
		    	android:layout_gravity="center"
		    	android:gravity="center">
				<RelativeLayout
				    android:id="@+id/llPhoto"
		    		android:layout_width="@dimen/ScratchSize"
		    		android:layout_height="@dimen/ScratchSize"
		    		android:layout_gravity="center"
		    		android:layout_marginTop="5dp"
		    		android:layout_marginBottom="5dp">
				</RelativeLayout>		   
			</LinearLayout>
	
			<LinearLayout
			    android:id="@+id/llButtons"
		    	android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="vertical"
		    	android:layout_margin="10dp"
		    	android:gravity="center">
		        <LinearLayout
		    		android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="1"
		    		android:orientation="horizontal">
		            <Button
		                android:id="@+id/btnName1" style="@style/Name_Select_Button"/>
		            <Button
		                android:id="@+id/btnName2" style="@style/Name_Select_Button"/>
				</LinearLayout>
		        	    	
		        <LinearLayout
		    		android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="1"
		    		android:orientation="horizontal">
		            <Button
		                android:id="@+id/btnName3" style="@style/Name_Select_Button"/>
		            <Button
		                android:id="@+id/btnName4" style="@style/Name_Select_Button"/>
				</LinearLayout>
	
		        <LinearLayout
		    		android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="1"
		    		android:orientation="horizontal">
		            <Button
		                android:id="@+id/btnName5" style="@style/Name_Select_Button"/>
		            <Button
		                android:id="@+id/btnName6" style="@style/Name_Select_Button"/>
				</LinearLayout>	    
			</LinearLayout>
			<LinearLayout
			    android:id="@+id/llResult"
		    	android:layout_width="match_parent"
		    	android:layout_height="match_parent"
		    	android:orientation="vertical"
		    	android:layout_margin="10dp"
		    	android:gravity="center"		
				android:visibility="gone">
			    
			    <LinearLayout
		    		android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="1.2"
		    		android:gravity="center"
		    		android:layout_marginTop="2dp"
		    		android:layout_marginBottom="2dp"
		    		android:layout_marginLeft="10dp"
		    		android:layout_marginRight="10dp"
		    		android:orientation="vertical"
		    		android:background="@drawable/score_frame">
				    <TextView 
				        android:id="@+id/tvNewScore"
				        android:gravity="center_horizontal"
				        android:layout_width="wrap_content"
				        android:layout_height="40dp"
				        android:textColor="#FFFFFF"
				        android:textSize="@dimen/NameButtonTextSize"
				        android:background="@drawable/score_bg"/>
				    <LinearLayout
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:gravity="center_vertical"
				        android:orientation="horizontal">
					    <ImageView 
					        android:id="@+id/ivStar1"
					        android:src="@drawable/white_star"
					        android:layout_marginRight="2dp"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"/>
					    <ImageView 
					        android:id="@+id/ivStar2"
					        android:src="@drawable/white_star"
					        android:layout_marginRight="2dp"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"/>
					    <ImageView 
					        android:id="@+id/ivStar3"
					        android:src="@drawable/white_star"
					        android:layout_marginRight="2dp"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"/>
				    </LinearLayout>			    
		        </LinearLayout>
			    
				<LinearLayout
		    		android:layout_width="fill_parent"
		    		android:layout_height="0dp"
		    		android:layout_weight="0.8"
		    		android:gravity="center"
		    		android:orientation="horizontal">
					<ImageButton
		        		android:id="@+id/btnPrev"
		        		android:layout_width="60dp"
		        		android:layout_height="match_parent"
		    			android:layout_marginTop="5dp"
		    			android:layout_marginBottom="5dp"
		        		android:layout_marginRight="5dp"
		        		android:background="@drawable/prev_btn"/>
					<TextView
		                android:id="@+id/tvThingName"
		                android:layout_weight="1"
		                android:layout_width="fill_parent"
		    			android:layout_marginTop="5dp"
		    			android:layout_marginBottom="5dp"
		                android:gravity="center"
		                android:paddingLeft="0dp"
		                android:paddingRight="0dp"
		                android:singleLine="true"
		                android:layout_height="match_parent"
		                android:textColor="@color/white"
		                android:textSize="@dimen/NameButtonTextSize"
		                android:background="@drawable/name_btn"/>
					<ImageButton
		        		android:id="@+id/btnNext"
		        		android:layout_width="60dp"
		        		android:layout_height="match_parent"
		    			android:layout_marginTop="5dp"
		    			android:layout_marginBottom="5dp"
		        		android:layout_marginLeft="5dp"
		        		android:background="@drawable/next_btn"/>
		        </LinearLayout>
			</LinearLayout>
		</LinearLayout>	
		<LinearLayout
	    	android:layout_width="match_parent"
	    	android:layout_height="0dp"
    		android:layout_weight="0.7"/>

	</LinearLayout>

	<LinearLayout
	    android:id="@+id/llPauseScreen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/paused_bg"
	    android:visibility="gone"
	    android:orientation="vertical">
	    
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1.0"
		    android:orientation="horizontal"
		    android:gravity="center_vertical">
		    <ImageButton
		        android:id="@+id/btnPauseBack"
		        android:layout_width="0dp"
		        android:layout_height="@dimen/TopButtonHeight"
		        android:background="@drawable/back_btn"
		        android:layout_weight="1.0"/>
		    <ImageView
		        android:layout_width="0dp"
		        android:layout_height="@dimen/TopButtonHeight"
		        android:layout_marginLeft="@dimen/TopTitleMargin"
		        android:layout_marginRight="@dimen/TopTitleMargin"
		        android:background="@drawable/pause_label"
		        android:layout_weight="2.0"/>
		    <ImageButton
		        android:id="@+id/btnSetting"
		        android:layout_width="0dp"
		        android:layout_height="@dimen/TopButtonHeight"
		        android:background="@drawable/setting_btn"
		        android:layout_weight="1.0"/>
		</LinearLayout>
		<LinearLayout
	    	android:layout_width="match_parent"
	    	android:layout_height="0dp"
    		android:layout_weight="1.3"
    		android:gravity="center"
    		android:orientation="vertical">
			<Button
		    	android:id="@+id/btnMainMenu"
		    	android:text="@string/txt_go_home"
		    	android:textColor="#FFFFFF"
		    	android:textSize="@dimen/ButtonTextSize"
		    	android:layout_width="@dimen/BottomButtonWidth"
		    	android:layout_height="@dimen/BottomButtonHeight"
		    	android:background="@drawable/pause_btn"/>
			<Button
		    	android:id="@+id/btnContinue"
		    	android:text="@string/txt_continue"
		    	android:textColor="#FFFFFF"
		    	android:textSize="@dimen/ButtonTextSize"
		    	android:layout_width="@dimen/BottomButtonWidth"
		    	android:layout_height="@dimen/BottomButtonHeight"
		    	android:layout_marginTop="10dp"
		    	android:background="@drawable/pause_btn"/>
		</LinearLayout>		
				
		<LinearLayout
	    	android:layout_width="match_parent"
	    	android:layout_height="0dp"
    		android:layout_weight="3.7"/>		
	</LinearLayout>		
</LinearLayout>