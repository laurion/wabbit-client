<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal" >
 
	<ImageView 
	    android:id="@+id/ivEmptyImage"
	    android:layout_width="80dp"
	    android:layout_height="80dp"
	    android:layout_margin="10dp"
	    android:background="@drawable/emptypicture"/>

	<LinearLayout
	    android:id="@+id/llPhotoFrame"
	    android:layout_width="80dp"
	    android:layout_height="80dp"
	    android:layout_margin="10dp"
	    android:background="@drawable/picture_frame">
		<ImageView 
	    	android:id="@+id/ivPhoto"
	    	android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:padding="3dp"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_weight="1.0"
	    android:layout_marginTop="15dp"
	    android:layout_marginBottom="15dp"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/tvName"
	        android:layout_width="wrap_content"
	        android:layout_height="30dp"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:textColor="#FFA700"
	        android:textSize="@dimen/LevelTextSize"/>
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
		    <ImageView 
		        android:id="@+id/ivStar1"
		        android:src="@drawable/white_star"
		        android:layout_marginRight="2dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		    <ImageView 
		        android:id="@+id/ivStar2"
		        android:src="@drawable/white_star"
		        android:layout_marginRight="2dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		    <ImageView 
		        android:id="@+id/ivStar3"
		        android:src="@drawable/white_star"
		        android:layout_marginRight="2dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
	    </LinearLayout>
	</LinearLayout>

	<ImageView 
	    android:layout_width="1dp"
	    android:layout_height="match_parent"
	    android:layout_marginTop="15dp"
	    android:layout_marginBottom="15dp"
	    android:background="#FFFFFF"/>

	<LinearLayout
	    android:layout_width="@dimen/SubMenuScoreWidth"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:gravity="center">
		<TextView 
	        android:id="@+id/tvScore"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:textColor="#FFFFFF"
	        android:textSize="@dimen/LevelTextSize"/>
		<ImageView
	        android:id="@+id/btnPlay"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/play_btn"/>		
	</LinearLayout>

</LinearLayout>