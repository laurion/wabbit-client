<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.0"
	    android:orientation="horizontal"
	    android:gravity="center_vertical">
	    <ImageButton
	        android:id="@+id/btnBack"
	        android:layout_width="0dp"
	        android:layout_height="@dimen/TopButtonHeight"
	        android:background="@drawable/back_btn"
	        android:layout_weight="1.0"/>
	    <ImageView
	        android:layout_width="0dp"
	        android:layout_height="@dimen/TopButtonHeight"
	        android:layout_marginLeft="@dimen/TopTitleMargin"
	        android:layout_marginRight="@dimen/TopTitleMargin"
	        android:background="@drawable/settings_label"
	        android:layout_weight="2.0"/>
	    <ImageButton
	        android:id="@+id/btnSave"
	        android:layout_width="0dp"
	        android:layout_height="@dimen/TopButtonHeight"
	        android:background="@drawable/save_btn"
	        android:layout_weight="1.0"/>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="3.3"
	    android:background="@drawable/setting_frame"
	    android:layout_marginLeft="@dimen/SettingFrameMargin"
	    android:layout_marginRight="@dimen/SettingFrameMargin"
	    android:orientation="vertical">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:gravity="center"
	            android:layout_weight="1">
	            <ImageButton 
	            	android:id="@+id/btnSoundOn"
	            	android:layout_width="@dimen/SettingOptionSize"
	            	android:layout_height="@dimen/SettingOptionSize"
	            	android:background="@drawable/sound_on_1"/>
	            <TextView
	                android:id="@+id/tvSoundOn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:textSize="@dimen/MoreGameTextSize"
	                android:textColor="#FFFFFF"
	                android:text="@string/txt_sound_on"/>
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:gravity="center"
	            android:layout_weight="1">
	            <ImageButton 
	            	android:id="@+id/btnSoundOff"
	            	android:layout_width="@dimen/SettingOptionSize"
	            	android:layout_height="@dimen/SettingOptionSize"
	            	android:background="@drawable/sound_off_1"/>
	            <TextView
	                android:id="@+id/tvSoundOff"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:textSize="@dimen/MoreGameTextSize"
	                android:textColor="#FFFFFF"
	                android:text="@string/txt_sound_off"/>
	        </LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:gravity="center"
	            android:layout_weight="1">
	            <ImageButton 
	            	android:id="@+id/btnMusicOn"
	            	android:layout_width="@dimen/SettingOptionSize"
	            	android:layout_height="@dimen/SettingOptionSize"
	            	android:background="@drawable/music_on_1"/>
	            <TextView
	                android:id="@+id/tvMusicOn"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:textSize="@dimen/MoreGameTextSize"
	                android:textColor="#FFFFFF"
	                android:text="@string/txt_music_on"/>
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:gravity="center"
	            android:layout_weight="1">
	            <ImageButton 
	            	android:id="@+id/btnMusicOff"
	            	android:layout_width="@dimen/SettingOptionSize"
	            	android:layout_height="@dimen/SettingOptionSize"
	            	android:background="@drawable/music_off_1"/>
	            <TextView
	                android:id="@+id/tvMusicOff"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="2dp"
	                android:textSize="@dimen/MoreGameTextSize"
	                android:textColor="#FFFFFF"
	                android:text="@string/txt_music_off"/>
	        </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:gravity="center"
	    android:layout_weight="1.0">
		<Button
		    android:id="@+id/btnAbout"
		    android:layout_width="@dimen/BottomButtonWidth"
		    android:layout_height="@dimen/BottomButtonHeight"
		    android:background="@drawable/about_btn"/>	    
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.7"/>
	
</LinearLayout>