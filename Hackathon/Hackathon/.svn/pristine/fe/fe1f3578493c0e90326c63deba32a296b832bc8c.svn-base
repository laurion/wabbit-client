<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.0"
	    android:orientation="horizontal"
	    android:gravity="center_vertical">
	    <ImageButton
	        android:id="@+id/btnBack"
	        android:layout_width="0dp"
	        android:layout_height="@dimen/TopButtonHeight"
	        android:background="@drawable/back_btn"
	        android:layout_weight="1.0"/>
	    <ImageView
	        android:layout_width="0dp"
	        android:layout_height="@dimen/TopButtonHeight"
	        android:layout_marginLeft="@dimen/TopTitleMargin"
	        android:layout_marginRight="@dimen/TopTitleMargin"
	        android:background="@drawable/highscores_label"
	        android:layout_weight="2.0"/>
	    <ImageButton
	        android:id="@+id/btnRate"
	        android:layout_width="0dp"
	        android:layout_height="@dimen/TopButtonHeight"
	        android:background="@drawable/rate_btn"
	        android:layout_weight="1.0"/>
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="4.0"
	    android:orientation="vertical">
	    <LinearLayout
	        android:id="@+id/llScoreScope"
			android:layout_width="match_parent"
	        android:layout_height="match_parent"
	    	android:background="@drawable/setting_frame"
	    	android:layout_marginLeft="@dimen/SettingFrameMargin"
	    	android:layout_marginRight="@dimen/SettingFrameMargin"	        
	        android:orientation="vertical">
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="0.55"
	            android:orientation="vertical">
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:orientation="horizontal">
					<ImageView
	            		android:layout_width="@dimen/ScopeLabelWidth"
	            		android:layout_height="@dimen/ScopeLabelHeight"
	                	android:background="@drawable/online_highscore"/> 
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:orientation="horizontal">
	                <TextView
	                    android:id="@+id/onlineUnlimited"
	                    android:text="@string/txt_unlimited"
	                    android:textSize="@dimen/ScopeTextSize"
	                    android:textColor="#000000"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"/>
					<Button
	        			android:id="@+id/btnOnlineUnlimited3days"
						style="@style/HighScores_Scope_Button_Style"
	        			android:text="@string/txt_3_days"/>
					<Button
	        			android:id="@+id/btnOnlineUnlimitedAlltime"
	        			style="@style/HighScores_Scope_Button_Style"
	        			android:text="@string/txt_all_time"/>	                
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:orientation="horizontal">
	                <TextView
	                    android:id="@+id/onlineCumulative"
	                    android:text="@string/txt_cumulative"
	                    android:textSize="@dimen/ScopeTextSize"
	                    android:textColor="#000000"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"/>
					<Button
	        			android:id="@+id/btnOnlineCumulative3days"
	        			style="@style/HighScores_Scope_Button_Style"
	        			android:text="@string/txt_3_days"/>
					<Button
	        			android:id="@+id/btnOnlineCumulativeAlltime"
	        			style="@style/HighScores_Scope_Button_Style"
	        			android:text="@string/txt_all_time"/>	                
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="0.45"
	            android:orientation="vertical">
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:layout_weight="1"
                 	android:gravity="center"
	                android:orientation="horizontal">
					<ImageView
	            		android:layout_width="@dimen/ScopeLabelWidth"
	            		android:layout_height="@dimen/ScopeLabelHeight"
	                	android:background="@drawable/local_highscore"/>                
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:orientation="horizontal">
	                <TextView
	                    android:id="@+id/localUnlimited"
	                    android:text="@string/txt_unlimited"
	                    android:textSize="@dimen/ScopeTextSize"
	                    android:textColor="#000000"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"/>
					<Button
	        			android:id="@+id/btnLocalUnlimited3days"
	        			style="@style/HighScores_Scope_Button_Style"
	        			android:text="@string/txt_3_days"/>
					<Button
	        			android:id="@+id/btnLocalUnlimitedAlltime"
	        			style="@style/HighScores_Scope_Button_Style"
	        			android:text="@string/txt_all_time"/>		                
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:layout_weight="1"
	                android:gravity="center"
	                android:orientation="horizontal">
	                <TextView
	                    android:id="@+id/localCumulative"
	                    android:text="@string/txt_cumulative"
	                    android:textSize="@dimen/ScopeTextSize"
	                    android:textColor="#000000"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"/>
					<Button
	        			android:id="@+id/btnLocalCumulative3days"
	        			style="@style/HighScores_Scope_Button_Style"
	        			android:text="@string/txt_3_days"/>
					<Button
	        			android:id="@+id/btnLocalCumulativeAlltime"
	        			style="@style/HighScores_Scope_Button_Style"
	        			android:text="@string/txt_all_time"/>		                
	            </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
	    <LinearLayout
			android:id="@+id/llScoreArea"
			android:visibility="gone"
			android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        
	        <TextView 
	            android:id="@+id/tvScoreLabel"
	            android:gravity="center"
	            android:background="#000000"
	            android:textColor="#FFFFFF"
	            android:textSize="@dimen/ScopeTextSize"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"/>
	        <ScrollView 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	    		android:layout_marginLeft="@dimen/SettingFrameMargin"
	    		android:layout_marginRight="@dimen/SettingFrameMargin"	            
	            android:layout_marginTop="@dimen/SettingFrameMargin">
	            <LinearLayout
	                android:id="@+id/llScoreList"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:orientation="vertical"/>
	        </ScrollView>

	    </LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.0"/>

</LinearLayout>