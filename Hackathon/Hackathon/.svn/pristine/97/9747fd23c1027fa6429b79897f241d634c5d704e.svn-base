<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moregames_bg"
    android:orientation="vertical" >
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.0"
	    android:orientation="horizontal"
	    android:gravity="center_vertical">
	    <ImageButton
	        android:id="@+id/btnBack"
	        android:layout_width="0dp"
	        android:layout_height="@dimen/TopButtonHeight"
	        android:background="@drawable/back_btn"
	        android:layout_weight="1.0"/>
	    <ImageView
	        android:layout_width="0dp"
	        android:layout_height="@dimen/TopButtonHeight"
	        android:layout_marginLeft="@dimen/TopTitleMargin"
	        android:layout_marginRight="@dimen/TopTitleMargin"
	        android:background="@drawable/moregames_label"
	        android:layout_weight="2.0"/>
	    <ImageButton
	        android:id="@+id/btnSetting"
	        android:layout_width="0dp"
	        android:layout_height="@dimen/TopButtonHeight"
	        android:background="@drawable/setting_btn"
	        android:layout_weight="1.0"/>
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="4.0"
	    android:orientation="vertical">
		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.0"
	        android:layout_marginBottom="@dimen/MoreGameImageMargin"
	        android:orientation="horizontal">
			<LinearLayout 
	        	android:layout_width="0dp"
	        	android:layout_height="fill_parent"
	        	android:layout_weight="1.0"
	        	android:layout_marginRight="@dimen/MoreGameImageMargin"
	        	android:gravity="right|center_vertical|bottom"
	        	android:orientation="vertical">
	        	<ImageButton
	        	    android:id="@+id/btnMoregame1"
	        	    android:layout_width="@dimen/MoreGameImageSize"
	        	    android:layout_height="@dimen/MoreGameImageSize"
	        	    android:background="@drawable/moregames_01"/>
	        	<TextView
	        	    android:id="@+id/tvMoregame1"
	        	    style="@style/MoreGames_Activity_TextView_Style"
	        	 	android:text="@string/txt_alphabet"/>
	    	</LinearLayout>
			<LinearLayout 
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="1.0"
		        android:layout_marginLeft="@dimen/MoreGameImageMargin"
		        android:gravity="left|center_vertical|bottom"
		        android:orientation="vertical">
	        	<ImageButton
	        	    android:id="@+id/btnMoregame2"
	        	    android:layout_width="@dimen/MoreGameImageSize"
	        	    android:layout_height="@dimen/MoreGameImageSize"
	        	    android:background="@drawable/moregames_02"/>
	        	<TextView
	        	    android:id="@+id/tvMoregame2"
	        	    style="@style/MoreGames_Activity_TextView_Style"
	        	 	android:text="@string/txt_dog_house"/>
		    </LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.0"
	        android:layout_marginTop="@dimen/MoreGameImageMargin"
	        android:orientation="horizontal">
			<LinearLayout 
	        	android:layout_width="0dp"
	        	android:layout_height="fill_parent"
	        	android:layout_weight="1.0"
	        	android:layout_marginRight="@dimen/MoreGameImageMargin"
	        	android:gravity="right|center_vertical|top"
	        	android:orientation="vertical">
	        	<ImageButton
	        	    android:id="@+id/btnMoregame3"
	        	    android:layout_width="@dimen/MoreGameImageSize"
	        	    android:layout_height="@dimen/MoreGameImageSize"
	        	    android:background="@drawable/moregames_03"/>
	        	<TextView
	        	    android:id="@+id/tvMoregame3"
	        	    style="@style/MoreGames_Activity_TextView_Style"
	        	 	android:text="@string/txt_chicken_ville"/>
	    	</LinearLayout>
			<LinearLayout 
		        android:layout_width="0dp"
		        android:layout_height="fill_parent"
		        android:layout_weight="1.0"
		        android:layout_marginLeft="@dimen/MoreGameImageMargin"
		        android:gravity="left|center_vertical|top"
		        android:orientation="vertical">
	        	<ImageButton
	        	    android:id="@+id/btnMoregame4"
	        	    android:layout_width="@dimen/MoreGameImageSize"
	        	    android:layout_height="@dimen/MoreGameImageSize"
	        	    android:background="@drawable/moregames_04"/>
	        	<TextView
	        	    android:id="@+id/tvMoregame4"
	        	    style="@style/MoreGames_Activity_TextView_Style"
	        	 	android:text="@string/txt_car_jam"/>
		    </LinearLayout>
	    </LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.0"/>
		
</LinearLayout>