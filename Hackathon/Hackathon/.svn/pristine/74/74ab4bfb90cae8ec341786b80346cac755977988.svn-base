<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/start_bg">

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.0"/>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1.5"
	    android:layout_margin="15dp"
	    android:orientation="vertical">
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.0"
	        android:orientation="horizontal">
	        <ImageButton
	            android:id="@+id/btnNewgame"
	            android:background="@drawable/main_new_game"
	            style="@style/Start_Activity_Button_Style"/>
	        <ImageButton
	            android:id="@+id/btnSettings"
	            android:background="@drawable/main_settings"
	            style="@style/Start_Activity_Button_Style"/>
	        <ImageButton
	            android:id="@+id/btnHighscore"
	            android:background="@drawable/main_high_score"
	            style="@style/Start_Activity_Button_Style"/>	        
	    </LinearLayout>

		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.0"
	        android:orientation="horizontal">
	        <ImageButton
	            android:id="@+id/btnHelp"
	            android:background="@drawable/main_help"
	            style="@style/Start_Activity_Button_Style"/>
	        <ImageButton
	            android:id="@+id/btnMoregames"
	            android:background="@drawable/main_more_games"
	            style="@style/Start_Activity_Button_Style"/>
	        <ImageButton
	            android:id="@+id/btnFollowlink"
	            android:background="@drawable/main_follow_link"
	            style="@style/Start_Activity_Button_Style"/>	        
	    </LinearLayout>
		<LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.0"
	        android:orientation="horizontal">
	        <ImageButton
	            android:id="@+id/btnContactus" 
	            android:background="@drawable/main_contact_us"
	            style="@style/Start_Activity_Button_Style"/>
	        <ImageButton
	            android:id="@+id/btnShare"
	            android:background="@drawable/main_share"
	            style="@style/Start_Activity_Button_Style"/>
	        <ImageButton
	            android:id="@+id/btnTime"
	            android:background="@drawable/main_time"
	            style="@style/Start_Activity_Button_Style"/>	        
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>